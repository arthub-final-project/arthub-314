generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GalleryItem {
  id        String   @id @default(cuid())
  title     String
  imageUrl  String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  Artist
  Collector
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   
  galleryItems GalleryItem[]
  profile      Profile?
}

model Profile {
  id              Int       @id @default(autoincrement())
  name            String
  contact         String?
  image           String?
  socialMedia     String?
  artpiece        String?
  description     String?
  owner           String
  userId      Int    @unique
  user        User   @relation(fields: [userId], references: [id])
}
